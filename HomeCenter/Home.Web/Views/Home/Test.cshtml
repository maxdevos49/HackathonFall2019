@{
    ViewData["Title"] = "Test Page";
}
<style>

    div[data-ui-root]
    {
        margin: 0;
        padding: 0;
        width: 100%;
        height: 100vh;
        overflow: hidden;
        display: flex;
        flex-direction: row;
    }
    
    div[data-ui-root] div
    {
        display: flex;
        flex: 1;
        border: 1px black solid;
        overflow: hidden;
    }
    
    div[data-ui-stack="vstack"]
    {
        flex-direction: column;
        /*height: inherit;*/
    }
    
    div[data-ui-stack="hstack"]
    {
        /*width: inherit;*/
        flex-direction: row;
    }
    
</style>

<div data-ui-root>
    
    <div data-ui-stack="vstack" style="flex:3">
        
        <div>
            We stack vertical item 1
        </div>
 
        <div>
            item 2
        </div>
        
        <div>
            item 3
        </div>
        
    </div>
    
    <div data-ui-stack="hstack">
        
        <div>
            We stack horizontal item 1
        </div>

        <div>
            item 2
        </div>

        <div>
            item 3
        </div>
        
    </div>
    
</div>

<script src="js/UIItem.js"></script>